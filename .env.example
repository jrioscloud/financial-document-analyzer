# Financial Document Analyzer - Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# Database (Local Development)
# =============================================================================
POSTGRES_USER=analyzer
POSTGRES_PASSWORD=analyzer_dev
POSTGRES_DB=financial_analyzer
DATABASE_URL=postgresql://analyzer:analyzer_dev@localhost:5434/financial_analyzer

# =============================================================================
# Supabase (Production Database + Auth)
# =============================================================================
# Get from: Supabase Dashboard → Settings → API
# Project URL and anon key are safe to expose in frontend (RLS protects data)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Get from: Supabase Dashboard → Settings → Database → Connection string
# DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# =============================================================================
# OpenAI API
# =============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# Application Settings
# =============================================================================
# LLM model for chat (gpt-4o-mini recommended for cost)
LLM_MODEL=gpt-4o-mini

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small

# Backend URL (for frontend API calls)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Environment
ENVIRONMENT=development
